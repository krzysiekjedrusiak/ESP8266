<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_schody"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.krzysztofjdrusiak.altodom.SchodyActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_restore_black_48dp"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"
        android:layout_marginBottom="67dp"
        android:id="@+id/imageButton3"
        android:onClick="onNextClickBtnBackSch"
        android:elevation="14dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="AUTO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:id="@+id/button"
        android:onClick="onNextClickBtnAuto"
        android:layout_below="@+id/onNextClickBtnOswON"
        android:layout_alignLeft="@+id/onNextClickBtnOswON"
        android:layout_alignStart="@+id/onNextClickBtnOswON" />

    <Button
        android:text="OFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/button2"
        android:onClick="onNextClickBtnOswOFF"
        android:layout_below="@+id/onNextClickBtnOswON"
        android:layout_alignLeft="@+id/onNextClickBtnOswON"
        android:layout_alignStart="@+id/onNextClickBtnOswON" />

    <TextView
        android:text="OŚWIETLENIE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/imageButtonOdswiez"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_autorenew_black_24dp"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="60dp"
        android:onClick="onNextClickOdswiez"
        android:id="@+id/imageButtonOdswiez"
        android:elevation="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="SCHODY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SCHODY"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:layout_below="@+id/imageButtonOdswiez"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:textSize="18sp" />

    <TextView
        android:text="..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewOswietlenie"
        android:onClick="onNextClickOdswiez"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toRightOf="@+id/imageButton3"
        android:layout_toEndOf="@+id/imageButton3"
        android:textSize="18sp" />

    <TextView
        android:text="..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewStrona"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView6"
        android:layout_toStartOf="@+id/textView6" />

    <Button
        android:text="DZIEŃ/NOC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/onNextClickBtnOswDzienNoc"
        android:onClick="onNextClickBtnDzienNoc"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="ON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/onNextClickBtnOswON"
        android:onClick="onNextClickBtnOswON"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rfid_signal_24"
        android:id="@+id/imageView2"
        android:layout_below="@+id/textViewStrona"
        android:layout_toRightOf="@+id/textViewOswietlenie"
        android:layout_toEndOf="@+id/textViewOswietlenie"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:text="Oswietlenie: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/textView8"
        android:textSize="18sp"
        android:layout_below="@+id/onNextClickBtnOswDzienNoc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
